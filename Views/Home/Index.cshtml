@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Make the cards smaller */
    .smaller-card {
        max-width: 250px; /* Adjust width of the card */
        margin: 0 auto; /* Center the card in its column */
        border-radius: 8px; /* Optional: round the card edges */
    }

    /* Make the images smaller */
    .smaller-img {
        max-height: 180px; /* Adjust the image height */
        object-fit: cover; /* Ensures the image fits nicely */
        width: 100%; /* Ensure the image takes up the full width */
        border-radius: 8px 8px 0 0; /* Optional: rounded top corners */
    }

    /* Adjust the spacing between the cards */
    .card {
        margin-bottom: 20px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome To YouTube API</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Genre Section -->
<div class="genre-section mt-5">
    <h3>Genre Videos</h3>
    <div class="row">
        <!-- Genre Video 1 -->
